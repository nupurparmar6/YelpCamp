

<% layout('layouts/boilerplate') %> 
    <div id="map" style="width: 100%; height: 500px;"></div>
    <h1>All Campgrounds</h1>
    <div><a href="/campgrounds/new">Add New Campgrounds</a></div>

    
    <% for(let camp of campsArr){%>
          <div class="card mb-3">
            <div class="row">
              <div class="class col-md-4">
                <% if(camp.images.length){ %> 
                <img class="img-fluid" src="<%=camp.images[0].url%>">
                <% }else{ %> 
                <img class="img-fluid" src="https://res.cloudinary.com/nupur/image/upload/v1620209214/YelpCamp/default_yecqqv.jpg">
                <% } %> 
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= camp.title %></h5>
                  <p class="card-text"><%= camp.description %></p>
                  <p class="card-text ">
                    <small class="text-muted"><%= camp.location %></small>
                  </p>
                  <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View Details</a>
                </div>

              </div>
            </div>
          </div>
    <%}%>

<script>
  const mapToken= '<%-process.env.MAPBOX_TOKEN%>';
  const campData= {features: <%-JSON.stringify(campsArr)%>};
</script>
   
<script src="/javascripts/clusterMap.js"></script>